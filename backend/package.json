    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build" : "tsc",
    "start" : "node dist/index.js",
    "prisma:generate": "prisma generate --schema=src/schema.prisma",
    "prisma:migrate": "prisma migrate dev --name init --schema=src/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=src/schema.prisma",
    "prisma:reset": "prisma migrate reset --force --schema=src/schema.prisma",
    "build:full": "npm run prisma:generate && npm run build",
    "deploy": "npm run prisma:deploy && npm run prisma:generate && npm run build && npm run start"
  },
